<h1>Payments</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Member</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.name %></td>
        <td><%= link_to payment.member.name, member_path(payment.member) %></td>
        <td>
          <%= link_to 'Edit', edit_payment_path(payment), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', payment_path(payment), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_payment_path, :class => 'btn btn-primary' %>

