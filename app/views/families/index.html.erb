<h1>Families</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= link_to family.name, family_path(family) %></td>
        <td>
          <%= link_to 'Edit', edit_family_path(family), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', family_path(family), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_family_path, :class => 'btn btn-primary' %>
